@model QuanLySinhVien.Data.Taikhoan

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="TenTaiKhoan"></label>
        <input asp-for="TenTaiKhoan" class="form-control" />
        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MatKhau"></label>
        <input asp-for="MatKhau" class="form-control" type="password" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
